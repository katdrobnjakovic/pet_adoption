

<h1>Adoption Application</h1>


<% if @success %>
	Thank you for submitting your adoption application!
<% else %>
	<p>

		<%= form_tag do %>

		<div class="field">
			<%= label_tag :first_name, "First Name" %><br>
			<%= text_field_tag :first_name %><br>
		</div>

		<div class="field">
			<%= label_tag :last_name, "Last Name" %><br>
			<%= text_field_tag :last_name %><br>
		</div>

		<div class="field">
			<%= label_tag :email, "E-mail" %><br>
			<%= text_field_tag :email %><br>
		</div>

		<div class="field">
			<%= label_tag :pet_name, "Pet Name" %><br>
			<%= text_area_tag :pet_name %><br>
		</div>

		<div class="field">
			<%= submit_tag "Submit" %>
		</div>

		<% end %>
	</p>

<% end %>
