<%=	form_for @event_post do |f| %> 
<div class = container>
	<div class = field>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</div>

	<div class = field>
		<%= f.label :date %><br>
		<%= f.date_select :date %><br>
	</div>

	<div class = field>
		<%= f.label :location %><br>
		<%= f.text_field :location %><br>
	</div>

	<div class = field>
		<%= f.label :description %><br>
		<%= f.text_area :description %><br>
	</div>

	

	<div class = actions>
		<%= f.submit %>
	</div>
</div>
<% end %>
